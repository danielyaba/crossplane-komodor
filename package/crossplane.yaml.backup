apiVersion: pkg.crossplane.io/v1
kind: Provider
metadata:
  name: crossplane-komodor
  annotations:
    meta.crossplane.io/maintainer: "danielyaba <danielyaba@example.com>"
    meta.crossplane.io/source: "github.com/danielyaba/crossplane-komodor"
    meta.crossplane.io/license: "Apache-2.0"
    meta.crossplane.io/description: |
      A Crossplane provider for managing Komodor Real Time Monitors.
      This provider allows you to create, update, and delete monitors
      in Komodor using Kubernetes Custom Resources.
spec:
  package: "docker.io/danielyaba/provider-komodor:v1.0.0"
  packagePullPolicy: IfNotPresent
  revisionActivationPolicy: Automatic
  revisionHistoryLimit: 1
